<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTopicActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topics"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp"
        android:id="@+id/topics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/topics"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/floating_action_button"
        app:backgroundTint="@android:color/background_light" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:layout_toRightOf="@+id/floatingActionButton"
        android:clickable="true"
        app:backgroundTint="@android:color/background_light"
        android:scaleType="fitXY"
        android:src="@android:drawable/btn_minus"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/topics"
        android:id="@+id/essaytopicsListView"
        >
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Essay"
        android:id="@+id/startessaybutton"
        android:layout_below="@+id/topics"
        android:onClick="onClickEssay"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        />

    <!-- TODO: Add "onClickBack" button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backbutton"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startessaybutton"
        />



</RelativeLayout>